class Solution {
    int countPartitions(int[] arr, int d) {
        int MOD = 1000000007;
        int sum = 0, n = arr.length;
        for (int nm : arr) sum += nm;

        if (d > sum || (sum + d) % 2 != 0) return 0;

        int trg = (sum + d) / 2;
        int[][] dp = new int[n + 1][trg + 1];

        for (int i = 0; i <= n; i++) {
            dp[i][0] = 1;
        }

        for (int i = 1; i <= n; i++) {
            for (int j = 0; j <= trg; j++) {
                dp[i][j] = dp[i - 1][j]; 
                if (arr[i - 1] <= j) {
                    dp[i][j] = (dp[i][j] + dp[i - 1][j - arr[i - 1]]) % MOD; // include
                }
            }
        }

        return dp[n][trg];
    }
}
//>>>>>>> Rec <<<<<<<<<<
class Solution {
    int help(int arr[], int sum , int curr, int idx, int d){
        if(idx == arr.length){
            int s2 = Math.abs(sum - 2*curr);  // <-- difference of two subsets
            if(s2 == d) return 1;             // <-- valid partition found
            return 0;
        }
        // choice 1: include arr[idx] in subset
        // choice 2: skip arr[idx]
        return help(arr, sum, curr+arr[idx], idx+1, d) 
             + help(arr, sum, curr, idx+1, d);                   
    }
    
    int countPartitions(int[] arr, int d) {
        int sum = 0;
        for(int n : arr){
            sum += n;
        }
        return help(arr, sum, 0, 0, d);
    }
}
